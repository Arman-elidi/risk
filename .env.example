# Application Configuration
APP_NAME=Risk Orchestrator
APP_VERSION=2.1.0
DEBUG=false
ENVIRONMENT=production  # development, staging, production

# Security (REQUIRED)
SECRET_KEY=your-256-bit-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (REQUIRED)
DATABASE_URL=postgresql+asyncpg://riskuser:password@localhost:5432/risk_orchestrator
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300

# External APIs (optional)
BLOOMBERG_API_KEY=
REFINITIV_API_KEY=

# Dify AI Integration (optional)
DIFY_API_URL=http://localhost:3001/v1
DIFY_API_KEY_SUMMARY=app-xxx...  # Executive summary workflow
DIFY_API_KEY_ALERT=app-yyy...    # Alert explanation workflow
DIFY_API_KEY_EMAIL=app-zzz...    # Board email workflow

# Email/SMS for alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMS_API_KEY=

# Monitoring
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
SENTRY_DSN=

# Report Storage
REPORTS_DIR=/var/risk-reports
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# CORS
CORS_ORIGINS=http://localhost:3000,https://risk.yourdomain.com
